@using FLYNOBORDERS.SelfB2B.Framework.Helper
@model FLYNOBORDERS.SelfB2B.Model.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Login</h2>

@using (Html.BeginForm("Login"))
{
    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6 box-shadow" align="center">
            @if (ValidationHelper2.IsValidString(ViewBag.Error))
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            
            
            <div class="form-group">
                @Html.LabelFor(l=>l.CEmail)
                @Html.TextBoxFor(l => l.CEmail, new { placeholder = "Business Email Address", @class = "form-control" })
                @Html.ValidationMessageFor(l=>l.CEmail)
            </div>
            
            <div class="form-group">
                @Html.LabelFor(l => l.Pass)
                @Html.PasswordFor(l => l.Pass, new { placeholder = "Enter minimum 6 character long Password ", @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Pass)
            </div>
            
            <div class="form-group">
                <a href=@Url.Action("ForgotPassword","Account")>Forgot Password?</a>
            </div>
            
            <button type="submit" class="btn btn-primary">Login</button>

        </div>

        <div class="col-md-3"></div>
    </div>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $('#SiMenu').addClass('active');
        });
    </script>
}