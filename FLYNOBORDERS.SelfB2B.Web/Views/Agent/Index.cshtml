@model FLYNOBORDERS.SelfB2B.Entities.UserInfo
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}
<head>
    <!--<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">-->
    <!--<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>-->
</head>
<h2 align="center">MY DASHBOARD</h2>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
    <div class="col-md-3">
        Balance : @Html.TextBoxFor(u=>u.Balance, new{@readonly="readonly"})
    </div>
</div>

<br/> <br/>

<div class="row">
    <div class="col-md-12">
        <div class="panel box-shadow" style="">
            <div class="panel-body">
                <div class="card-deck">
                    <div class="card bg-primary">
                        <div class="card-body">
                            <i class="fas fa-ticket-alt"></i>
                            <label style="margin-left:60%">backed </label>
                            <p style="margin-left:60%">TICKETED</p>
                            <a class="btn btn-primary form-control">VIEW BOOKINGS</a>
                        </div>
                    </div>
                    <div class="card bg-warning">
                        <div class="card-body text-center">
                            <label style="margin-left:60%">backed </label>
                            <p style="margin-left:60%">ON HOLD</p>
                            <a class="btn btn-secondary form-control">VIEW BOOKINGS</a>
                        </div>
                    </div>
                    <div class="card bg-danger">
                        <div class="card-body text-center">
                            <label style="margin-left:60%">backed </label>
                            <p style="margin-left:60%">EXPIRING</p>
                            <a class="btn btn-secondary form-control">VIEW BOOKINGS</a>
                        </div>
                    </div>
                    <div class="card bg-success">
                        <div class="card-body text-center">
                            <label style="margin-left:60%">backed </label>
                            <p style="margin-left:60%">IN PROCESS</p>
                            <a class="btn btn-secondary form-control">VIEW BOOKINGS</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

